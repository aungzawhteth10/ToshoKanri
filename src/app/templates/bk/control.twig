	//ログイン／登録切り替え
	function changeTab(){
		var click = $$("tabbar").getValue();
		if(click == "login"){
			$$("signUpForm").hide();
			$$("loginForm").show();
		}else if(click == "signUp"){
			$$("loginForm").hide();
			$$("signUpForm").show();
		}
	};
	//ログインボタン押下時
	function open(){
		webix.message("open is clicked");
		$.get("runVideo", {}, function(data){
			webix.message(data);
		});
	}
	function close(){
		webix.message("close is clicked");
		$.get("closeVideo");
	}       
