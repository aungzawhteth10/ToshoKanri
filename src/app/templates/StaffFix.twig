                    {view:"text", id:"seinengappi_gengou", name:"seinengappi_gengou", label:" ", labelWidth:1, width:250},
                ]},
                {cols:[
                    {view:"label", label:"年", width:100},   
                    {view:"text", id:"seinengappi_year", name:"seinengappi_year", label:" ", labelWidth:1, width:250},
                ]},
                {cols:[
                    {view:"label", label:"月", width:100},   
                    {view:"select", id:"seinengappi_month", name:"seinengappi_month", label:" ", options:{{HtmlHelper.getJsonKara('cm_syainn_category')|raw}}, labelWidth:1, width:250}, 
                ]},
                 {cols:[
                    {view:"label", label:"日", width:100},  
                    {view:"text", id:"seinengappi_day", name:"seinengappi_day", label:" ", labelWidth:1, width:150, attributes:{maxlength:6},disabled:true},
                ]},
                 {cols:[
                    {view:"label", label:"年齢", width:100},   
                    {view:"text", id:"age", name:"age", label:" ", labelWidth:1, width:150, attributes:{maxlength:6},disabled:true},
                ]},
                 {cols:[
                    {view:"label", label:"郵便番号", width:100},   
                    {view:"text", id:"post_no", name:"post_no", label:" ", labelWidth:1, width:150, attributes:{maxlength:6},disabled:true},
                ]},
                {cols:[
                    {view:"label", label:"都道府県", width:100},   
                    {view:"text", id:"todoufuken", name:"todoufuken", label:" ", labelWidth:1, width:150, attributes:{maxlength:6},disabled:true},
                ]},
                {cols:[
                    {view:"label", label:"市区町村", width:100},   
                    {view:"text", id:"shikuchoson", name:"shikuchoson", label:" ", labelWidth:1, width:150, attributes:{maxlength:6},disabled:true},
                ]},
                {cols:[
                    {view:"label", label:"町名", width:100},   
                    {view:"text", id:"chou_name", name:"chou_name", label:" ", labelWidth:1, width:150, attributes:{maxlength:6},disabled:true},
                ]},
                {cols:[
