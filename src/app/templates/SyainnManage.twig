{% include 'base.html' %}
<script >
  var form = {
    view:"form",
    id:"form",
    borderless:true,
    elements:[
      {rows:[
        {
          view:"cust_datatable",
          id:"ichiran",
          hover:"myhover",
          select:true,
          rowHeight:60,
          yCount:8,
          tooltip:true,
          columns:[
            {id:"syainn_id", header:["社員ID", {content:"textFilter"}], width:150},
            {id:"syainn_name", header:["社員名", {content:"textFilter"}], width:200},
            {id:"syainn_sex", header :["社員性別", {content:"textFilter"}],  width:200},
            {id:"syainn_age", header :["社員年齢", {content:"textFilter"}],  width:200},
             {id:"syainn_Occupation", header :["職種", {content:"selectFilter"}],  width:200},
          ]
      }]} 
    ]
  };
  var footer = {view:"button", id:"btn_back", name:"btn_back", value:"メニューへ戻る", css:"webix_primary", width:150, height:50}
 var logic = {
     init:function() {
      $$("btn_back").attachEvent("onItemClick", function(){AUNG.pageMove("Menu")});
      logic.dataload();
      $$("ichiran").on_click.pageMove  = logic.toEditBook;
    },
    dataload:function() {
      AUNG.GET("Api/ApiSyainnManage", {}, function(text, data, xml) {
        if(AUNG.isAjaxError()) return false;
        AUNG.datatable.parse("ichiran", text);
      });
    },
    toEditBook:function(e, id, trg) {
       var _item = $$("ichiran").getItem(id);
       var _session = {syainn_id:_item.syainn_id};
      AUNG.pageMove("SyainnRegister", _session);
    }
  };
   webix.ui(
    {rows:[
      form,
      footer,
      {height:60},
    ]}
  );
  webix.ready(function () {
    AUNG.init();
    logic.init();
  });
</script>